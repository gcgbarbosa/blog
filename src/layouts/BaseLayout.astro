---
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';

import "../assets/app.css";

const { pageTitle } = Astro.props;
---
<html lang="en" data-theme="night">
  <head>
    <meta charset="utf-8" />
    <link rel="icon" type="image/x-icon" href="/favicon.ico">
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <meta name="generator" content={Astro.generator} />
    <title>{pageTitle + " - gcgbarbosa.com"}</title>
  </head>
  <body class="min-h-[100svh] flex flex-col bg-base-100 text-base-content">

    <header class="mb-4 lg:mb-8">
      <Header />
    </header>

    <main id="content" class="flex-1 flex  justify-center">
      <div class="container max-w-4xl px-3">
        <h1 class="text-3xl sm:text-3xl lg:text-4xl font-bold mb-6">{pageTitle}</h1>
        <slot />
      </div>
    </main>

    <footer class="mt-4 lg:mt-8"> 
      <Footer />
    </footer>

  </body>
</html>
